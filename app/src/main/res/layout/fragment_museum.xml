<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FA"
    android:clickable="true"
    android:focusable="true"
    tools:context=".Fragment_museum">

    <!-- Header (Fixed at top) -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_arrow_back"
        app:tint="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Destinasi"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack" />

    <ImageView
        android:id="@+id/btnFavorite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/love"
        app:tint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Image -->
            <androidx.cardview.widget.CardView
                android:id="@+id/imageCard"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/museum"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="MONUMEN JOGJA KEMBALI"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold" />

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/icLocation"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/location"
                    app:tint="#2196F3" />

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Jalan Ring Road Utara, Kab. Sleman, D.I.Y"
                    android:textColor="#555555"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>

            <!-- Info Cards (Time & Price) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="20dp"
                android:baselineAligned="false">

                <!-- Time Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <ImageView
                            android:id="@+id/icTime"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/settings"
                            app:tint="#2196F3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BUKA JAM"
                            android:textSize="10sp"
                            android:textColor="#9E9E9E"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08:00-16:00"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Price Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <ImageView
                            android:id="@+id/icTicket"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ticket"
                            app:tint="#2196F3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TIKET MASUK"
                            android:textSize="10sp"
                            android:textColor="#9E9E9E"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_marginTop="8dp"/>
                        <TextView
                            android:id="@+id/tvTicketPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rp15.000"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:text="Deskripsi"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="24dp"
                android:lineSpacingMultiplier="1.2"
                android:text="Monumen Jogja Kembali adalah museum sejarah yang menampilkan koleksi tentang perjuangan kemerdekaan Indonesia, khususnya di wilayah Yogyakarta. Museum ini menyajikan diorama, foto-foto, dan artefak bersejarah yang menggambarkan peristiwa penting dalam sejarah Indonesia. Pengunjung dapat melihat replika monumen, senjata tradisional, dan berbagai dokumentasi yang memberikan wawasan mendalam tentang perjuangan rakyat Indonesia merebut kemerdekaan."
                android:textColor="#555555"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:justificationMode="inter_word" />

            <!-- Ulasan Header -->
            <TextView
                android:id="@+id/tvReviewsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:text="Ulasan Pengunjung"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold" />

            <!-- Reviews Container -->
            <LinearLayout
                android:id="@+id/llReviewsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp">

                 <View
                    android:id="@+id/emptyReviewPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:visibility="gone"
                    android:background="@drawable/bg_white_rounded_square"/> 

            </LinearLayout>

            <!-- No Reviews Placeholder (Static Design) -->
            <FrameLayout
                 android:layout_width="match_parent"
                 android:layout_height="120dp"
                 android:layout_marginHorizontal="24dp"
                 android:background="@drawable/bg_white_rounded_square"
                 android:layout_marginTop="8dp">

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center"
                      android:gravity="center">
                     <ImageView
                         android:layout_width="24dp"
                         android:layout_height="24dp"
                         android:src="@drawable/send"
                         app:tint="#D0D0D0"/>
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Belum ada ulasan"
                         android:textSize="10sp"
                         android:textColor="#9E9E9E"
                         android:layout_marginTop="8dp"
                         android:fontFamily="@font/poppins_regular"/>
                  </LinearLayout>
            </FrameLayout>

            <!-- Input Review -->
            <LinearLayout
                android:id="@+id/layoutAddReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/etAddReview"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_white_rounded_square"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="2dp"
                    android:hint="Tulis ulasan Anda..."
                    android:paddingStart="20dp"
                    android:paddingEnd="16dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular"
                    android:inputType="textCapSentences"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/btnSendReview"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_white_rounded_square" 
                    android:backgroundTint="#4FC3F7"
                    android:padding="10dp"
                    android:src="@drawable/send"
                    app:tint="@android:color/white"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
